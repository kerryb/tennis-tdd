<div class="text-center">
  <.simple_form for={@form} phx-change="change" phx-submit="ignore">
    <h1 class="text-2xl">Tennis Scorer</h1>
    <.button id="point-to-player-one" phx-click="point-to-player-one">Player one</.button>
    <.button id="point-to-player-two" phx-click="point-to-player-two">Player two</.button>
  </.simple_form>
  <.score score={@score} />
</div>
